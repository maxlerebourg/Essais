{% extends "MLFirstBundle::layout.html.twig" %}

{% block title %}
    Accueil - {{ parent() }}
{% endblock %}

{% block ml_body %}

    <h2>Liste des annonces</h2>

    <ul class="navbar-nav">
        {% for advert in listAdverts %}
            <li>
                <a href="{{ path('ml_view', {'id': advert.id}) }}">
                    {{ advert.title }}
                </a>
                par {{ advert.author }},
                le {{ advert.date|date('d/m/Y') }}
            </li>
        {% else %}
            <li>Pas (encore !) d'annonces</li>
        {% endfor %}
    </ul>

{% endblock %}